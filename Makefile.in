recursive-subtargets = $(wildcard */Makefile)
python = python
tools = tools
export PYTHONPATH = $(tools)


all-recursive: $(recursive-subtargets) all

%/Makefile: FORCE
	$(MAKE) -C $*

all: FORCE
FORCE:
.DELETE_ON_ERROR:

%.html: %.rst
	$(python) $(tools)/rst.py -o $@ $<

%.gz: %
	gzip -9 -c $< > $@

-include Makefile.local
